<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignUpHours"
    android:background="@color/white">


        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="36dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.009"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signup_4_of"
            android:layout_width="86dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal|top"
            android:text="@string/signup_4_of"
            android:textAppearance="@style/signup_3_of"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppName"/>

        <TextView
            android:id="@+id/businesshours"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:lineHeight="46dp"
            android:gravity="center_horizontal|top"
            android:text="@string/b_hours"
            android:textAppearance="@style/welcome_"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_4_of"/>


        <TextView
            android:id="@+id/attached_pr"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="52dp"
            android:gravity="top"
            android:text="@string/choose_the_"
            android:textAppearance="@style/attached_pr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/businesshours" />


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attached_pr"
            app:layout_constraintVertical_bias="0.109">

                <!-- Days Selection -->

                <!-- Time Slots -->
                <LinearLayout
                    android:id="@+id/dayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMon"
                            style="@style/DayButton"
                            android:text="M" />

                        <Button
                            android:id="@+id/btnTue"
                            style="@style/DayButton"
                            android:text="T" />

                        <Button
                            android:id="@+id/btnWed"
                            style="@style/DayButton"
                            android:text="W" />

                        <Button
                            android:id="@+id/btnThu"
                            style="@style/DayButton"
                            android:text="Th" />

                        <Button
                            android:id="@+id/btnFri"
                            style="@style/DayButton"
                            android:text="F" />

                        <Button
                            android:id="@+id/btnSat"
                            style="@style/DayButton"
                            android:text="S" />

                        <Button
                            android:id="@+id/btnSun"
                            style="@style/DayButton"
                            android:layout_width="48dp"
                            android:text="Su" />
                </LinearLayout>

                <GridLayout
                    android:id="@+id/timeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2"
                    android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnTime1"
                            style="@style/TimeSlotButton"
                            android:text="8:00am - 10:00am" />

                        <Button
                            android:id="@+id/btnTime2"
                            style="@style/TimeSlotButton"
                            android:text="10:00am - 1:00pm" />

                        <Button
                            android:id="@+id/btnTime3"
                            style="@style/TimeSlotButton"
                            android:text="1:00pm - 4:00pm" />

                        <Button
                            android:id="@+id/btnTime4"
                            style="@style/TimeSlotButton"
                            android:text="4:00pm - 7:00pm" />

                        <Button
                            android:id="@+id/btnTime5"
                            style="@style/TimeSlotButton"
                            android:text="7:00pm - 10:00pm" />
                </GridLayout>

        </LinearLayout>

        <Button
            android:id="@+id/continueToVerification2"
            android:layout_width="218dp"
            android:layout_height="51dp"
            android:background="@drawable/rounded_button"
            android:text="SignUp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.865"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/attached_pr"
            app:layout_constraintVertical_bias="0.939" />

        <View
            android:id="@+id/backToVerification"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="36dp"
            android:layout_height="20dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/continueToVerification2"
            app:layout_constraintHorizontal_bias="0.358"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.981" />

</androidx.constraintlayout.widget.ConstraintLayout>